<p id="notice"><%= notice %></p>

<h1>Cepas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Disponibilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= strain.name %></td>
        <td><%= strain.available %></td>
        <td><%= link_to 'Mostrar', strain %></td>
        <td><%= link_to 'Editar', edit_strain_path(strain) %></td>
        <td><%= link_to 'Eliminar', strain, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Cepa', new_strain_path %>
<%= link_to 'Nuevo Vino', new_wine_path %>
